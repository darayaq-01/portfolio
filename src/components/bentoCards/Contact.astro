---
import CardTitle from '@components/ui/CardTitle.astro';
import LinkBtn from '@components/ui/LinkBtn.astro';
---

<section
    class='group relative aspect-auto h-fit w-full content-center overflow-hidden rounded-md border-none bg-gradient-to-r from-[#124e50] to-[#048d92] py-8 text-ij-blue md:col-span-2 md:aspect-[16/8] md:h-36 md:py-0'
>
    <div
        class='flex flex-col gap-6 px-10 md:flex-row md:items-baseline md:justify-between md:gap-1'
    >
        <div>
            <CardTitle className='pb-3 '>Contact</CardTitle>
            <p class='text-balance'>
                Let's explore possibilites to work together
            </p>
        </div>

        <div class='justify-start md:self-center'>
            <LinkBtn
                href='mailto:web@darayaq.de'
                text='Write me an Email'
                ariaLabel='Open a new e-mail'
            />
        </div>
    </div>
</section>
