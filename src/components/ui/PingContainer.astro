---
interface Props {
    text: string;
    classText?: string;
}

const { text, classText } = Astro.props;
---

<div
    class='flex items-center gap-2 rounded-md border border-current px-3 py-2 opacity-90'
>
    <span class='relative flex h-3 w-3'>
        <span
            class='absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-75'
        ></span>
        <span class='relative inline-flex h-3 w-3 rounded-full bg-green-500'
        ></span>
    </span>
    <span class:list={['text-pretty font-bold ', classText]}>{text}</span>
</div>
